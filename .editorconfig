# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

# C# files
[*.cs]
csharp_new_line_before_open_brace = all
csharp_space_between_parentheses = false
csharp_space_after_cast = false
csharp_preserve_single_line_blocks = true
csharp_preserve_single_line_statements = true
csharp_prefer_braces = true

# Naming conventions
dotnet_naming_symbols.interface_prefix.required_prefix = I
dotnet_naming_symbols.interface_prefix.applicable_kinds = interface
dotnet_naming_symbols.interface_prefix.required_visibility = public, internal

dotnet_naming_rule.interface_should_be_prefixed.symbols = interface_prefix
dotnet_naming_rule.interface_should_be_prefixed.style = pascal_case
dotnet_naming_rule.interface_should_be_prefixed.severity = warning
